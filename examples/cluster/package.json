{
  "name": "pxl-cluster-example",
  "version": "1.0.0",
  "description": "PXL Framework - Cluster Mode Example",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx src/index.ts",
    "cluster": "tsx src/index.ts --cluster",
    "cluster:auto": "tsx src/index.ts --cluster=auto",
    "cluster:manual": "tsx src/index.ts --cluster=manual --workers=4",
    "verify": "tsx src/tests/verify-cluster.ts",
    "load-test": "tsx src/tests/load-test.ts",
    "test:all": "npm run cluster & sleep 3 && npm run verify && npm run load-test"
  },
  "dependencies": {
    "@scpxl/nodejs-framework": "file:../../",
    "dotenv": "^17.2.0",
    "picocolors": "^1.1.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
