{
  "name": "@scpxl/nodejs-framework",
  "version": "1.0.24",
  "description": "PXL Node.js Framework",
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pxl": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./application": {
      "import": "./dist/application/index.js",
      "types": "./dist/application/index.d.ts"
    },
    "./logger": {
      "import": "./dist/logger/index.js",
      "types": "./dist/logger/index.d.ts"
    },
    "./database": {
      "import": "./dist/database/index.js",
      "types": "./dist/database/index.d.ts"
    },
    "./error": {
      "import": "./dist/error/index.js",
      "types": "./dist/error/index.d.ts"
    },
    "./webserver": {
      "import": "./dist/webserver/index.js",
      "types": "./dist/webserver/index.d.ts"
    },
    "./websocket": {
      "import": "./dist/websocket/index.js",
      "types": "./dist/websocket/index.d.ts"
    },
    "./queue": {
      "import": "./dist/queue/index.js",
      "types": "./dist/queue/index.d.ts"
    },
    "./redis": {
      "import": "./dist/redis/index.js",
      "types": "./dist/redis/index.d.ts"
    },
    "./request-context": {
      "import": "./dist/request-context/index.js",
      "types": "./dist/request-context/index.d.ts"
    },
    "./cache": {
      "import": "./dist/cache/index.js",
      "types": "./dist/cache/index.d.ts"
    },
    "./performance": {
      "import": "./dist/performance/index.js",
      "types": "./dist/performance/index.d.ts"
    },
    "./command": {
      "import": "./dist/command/index.js",
      "types": "./dist/command/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth/index.js",
      "types": "./dist/auth/index.d.ts"
    },
    "./api-requester": {
      "import": "./dist/api-requester/index.js",
      "types": "./dist/api-requester/index.d.ts"
    },
    "./lifecycle": {
      "import": "./dist/lifecycle/index.js",
      "types": "./dist/lifecycle/index.d.ts"
    },
    "./util": {
      "import": "./dist/util/index.js",
      "types": "./dist/util/index.d.ts"
    },
    "./services": {
      "import": "./dist/services/index.js",
      "types": "./dist/services/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "node scripts/hmr-watcher-enhanced.js",
    "dev:legacy": "node scripts/hmr-watcher.js",
    "dev:import-map": "tsx src/index.ts",
    "clean": "del-cli dist",
    "build": "npm run clean && node esbuild.config.js",
    "build:tsc": "npm run clean && tsc",
    "build:local": "npm run clean && node esbuild.config.js && yalc push",
    "build:watch": "node esbuild.config.js --watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "node scripts/release.js",
    "status": "node scripts/framework-status.js",
    "prepare": "husky",
    "postinstall": "npm run build || echo 'Build failed, dist files may be missing'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "vitest run test/e2e",
    "test:ui": "vitest --ui",
    "check-all": "npm run lint && npm run prettier && npm run typecheck",
    "load:test": "tsx scripts/simple-load-test.ts",
    "load:test:hello-world": "tsx scripts/simple-load-test.ts --hello-world",
    "yalc:publish": "yalc publish",
    "yalc:push": "yalc push",
    "dev:yalc": "npm run build && npm run yalc:push",
    "example:install": "npm install --prefix examples/hello-world/backend && npm install --prefix examples/hello-world/frontend && npm install --prefix examples/commands",
    "example:hello-world": "concurrently -n backend,frontend -c blue,magenta \"npm run example:hello-world:backend\" \"npm run example:hello-world:frontend\"",
    "example:hello-world:backend": "npm run dev --prefix examples/hello-world/backend",
    "example:hello-world:frontend": "npm run dev --prefix examples/hello-world/frontend",
    "example:commands:install": "npm install --prefix examples/commands",
    "example:commands": "npm run dev --prefix examples/commands --",
    "example:commands:hello": "npm run dev --prefix examples/commands -- hello",
    "example:commands:seed": "npm run dev --prefix examples/commands -- database-seed",
    "example:commands:queue": "npm run dev --prefix examples/commands -- queue-process"
  },
  "keywords": [],
  "author": "PXL <devops@pxlagency.com>",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.4.1",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/node": "^24.0.13",
    "@types/ws": "^8.5.10",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.1.2",
    "del-cli": "^7.0.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^3.0.1",
    "fast-folder-size": "^2.0.4",
    "glob": "^11.0.3",
    "ignore": "^7.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.1.1",
    "redis-memory-server": "^0.13.0",
    "simple-git": "^3.25.0",
    "tsx": "^4.19.2",
    "tsc-alias": "^1.8.16",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.496.0",
    "@aws-sdk/s3-request-presigner": "^3.675.0",
    "@fastify/cors": "^11.0.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "@mikro-orm/cli": "^6.0.5",
    "@mikro-orm/core": "^6.0.5",
    "@mikro-orm/migrations": "^6.0.5",
    "@mikro-orm/postgresql": "^6.0.5",
    "@mikro-orm/seeder": "^6.0.5",
    "@sentry/node": "^10.17.0",
    "@sentry/profiling-node": "^10.17.0",
    "bullmq": "^5.1.3",
    "dotenv": "^17.2.0",
    "fastify": "^5.0.0",
    "fastify-type-provider-zod": "^6.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.3.2",
    "joi": "^18.0.1",
    "jose": "^6.0.10",
    "lru-cache": "^11.2.2",
    "typescript": "^5.8.3",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "ws": "^8.15.1",
    "yalc": "^1.0.0-pre.53",
    "yargs": "^18.0.0",
    "zod": "^4.1.5"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
