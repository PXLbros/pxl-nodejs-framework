{
  "name": "@pxl/nodejs-framework",
  "version": "1.0.13",
  "description": "PXL Node.js Framework",
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pxl": "./pxl.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./application": "./dist/application.js",
    "./logger": "./dist/logger.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "nodemon",
    "dev:new": "node pxl serve",
    "clean": "del-cli dist",
    "build": "npm run clean && tsc",
    "build:local": "npm run clean && tsc && yalc push",
    "docs": "typedoc",
    "release": "node scripts/release.js",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest test/unit",
    "test:integration": "vitest test/integration",
    "test:e2e": "vitest test/e2e",
    "check-all": "npm run lint && npm run format && npm run typecheck"
  },
  "keywords": [],
  "author": "PXL <devops@pxlagency.com>",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.4.1",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/node": "^24.0.13",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "del-cli": "^6.0.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "redis-memory-server": "^0.12.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.28.7",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.496.0",
    "@aws-sdk/s3-request-presigner": "^3.675.0",
    "@fastify/cors": "^11.0.0",
    "@fastify/multipart": "^9.0.0",
    "@mikro-orm/cli": "^6.0.5",
    "@mikro-orm/core": "^6.0.5",
    "@mikro-orm/migrations": "^6.0.5",
    "@mikro-orm/postgresql": "^6.0.5",
    "@mikro-orm/seeder": "^6.0.5",
    "@sentry/node": "^9.37.0",
    "@sentry/profiling-node": "^9.37.0",
    "axios": "^1.6.2",
    "bullmq": "^5.1.3",
    "dotenv": "^17.2.0",
    "fastify": "^5.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.1",
    "jose": "^6.0.10",
    "redis": "^5.6.0",
    "sharp": "^0.34.3",
    "typescript": "^5.8.3",
    "uuid": "^11.0.2",
    "winston": "^3.11.0",
    "ws": "^8.15.1",
    "yalc": "^1.0.0-pre.53",
    "yargs": "^18.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
