# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# TypeScript, JavaScript, JSON files
[*.{ts,js,json}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Package.json
[package.json]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,*.mk}]
indent_style = tab

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Minified files
[**.min.js]
indent_style = ignore
insert_final_newline = ignore
